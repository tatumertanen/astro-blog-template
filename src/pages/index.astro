---
import { site } from "@/config";
import Container from "@/components/core/Container.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title={site.name} description={site.description}>
	<Container class="max-w-4xl mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold mb-4">Welcome to My Blog</h1>
		<p class="text-lg mb-8">
			Here you'll find my latest thoughts and articles on various topics.
		</p>
		<section class="mb-8">
			<h2 class="text-2xl font-semibold mb-4">Recent Posts</h2>
			<!-- Add logic to fetch and display recent blog posts -->
			<ul class="space-y-2">
				<li>
					<a href="/blog/post-1" class="text-blue-600 hover:underline"
						>First Blog Post</a>
				</li>
				<li>
					<a href="/blog/post-2" class="text-blue-600 hover:underline"
						>Second Blog Post</a>
				</li>
				<li>
					<a href="/blog/post-3" class="text-blue-600 hover:underline"
						>Third Blog Post</a>
				</li>
			</ul>
		</section>
		<section>
			<h2 class="text-2xl font-semibold mb-4">Featured Categories</h2>
			<ul class="flex space-x-4">
				<li>
					<a
						href="/category/technology"
						class="bg-gray-200 hover:bg-gray-300 px-4 py-2 rounded-full"
						>Technology</a>
				</li>
				<li>
					<a
						href="/category/lifestyle"
						class="bg-gray-200 hover:bg-gray-300 px-4 py-2 rounded-full"
						>Lifestyle</a>
				</li>
				<li>
					<a
						href="/category/travel"
						class="bg-gray-200 hover:bg-gray-300 px-4 py-2 rounded-full"
						>Travel</a>
				</li>
			</ul>
		</section>
	</Container>
</Layout>
