---
import { home } from "@/config/home";
import Container from "@/components/core/Container.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Welcome to Our Blog">
	<Container class="max-w-5xl mx-auto px-6 py-12">
		<section class="text-center mb-12">
			<h1 class="text-5xl font-bold mb-4">{home.hero.title}</h1>
			<p class="text-xl text-gray-600 mb-8">
				{home.hero.description}
			</p>
			<a
				href="#"
				class="bg-blue-600 text-white px-6 py-3 rounded-full font-semibold hover:bg-blue-700 transition duration-200"
			>
				{home.cta.text}
			</a>
		</section>
		<section class="mb-16">
			<h2 class="text-3xl font-semibold mb-8 text-center">
				{home.featuredPosts.title}
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<div class="bg-white shadow-lg rounded-lg overflow-hidden">
					<div class="p-6">
						<h3 class="text-xl font-semibold mb-2">
							<a
								href="/blog/post-1"
								class="text-gray-900 hover:text-blue-600 transition duration-200"
							>
								{home.featuredPosts.post_1.title}
							</a>
						</h3>
						<p class="text-gray-600 mb-4">
							{home.featuredPosts.post_1.excerpt}
						</p>
						<p class="text-sm text-gray-500 mb-4">
							By {home.featuredPosts.post_1.author} on {
								home.featuredPosts.post_1.date
							}
						</p>
						<a
							href="/blog/post-1"
							class="text-blue-600 hover:underline">Read more</a
						>
					</div>
				</div>
				<div class="bg-white shadow-lg rounded-lg overflow-hidden">
					<div class="p-6">
						<h3 class="text-xl font-semibold mb-2">
							<a
								href="/blog/post-2"
								class="text-gray-900 hover:text-blue-600 transition duration-200"
							>
								{home.featuredPosts.post_2.title}
							</a>
						</h3>
						<p class="text-gray-600 mb-4">
							{home.featuredPosts.post_2.excerpt}
						</p>
						<p class="text-sm text-gray-500 mb-4">
							By {home.featuredPosts.post_2.author} on {
								home.featuredPosts.post_2.date
							}
						</p>
						<a
							href="/blog/post-2"
							class="text-blue-600 hover:underline">Read more</a
						>
					</div>
				</div>
				<div class="bg-white shadow-lg rounded-lg overflow-hidden">
					<div class="p-6">
						<h3 class="text-xl font-semibold mb-2">
							<a
								href="/blog/post-3"
								class="text-gray-900 hover:text-blue-600 transition duration-200"
							>
								{home.featuredPosts.post_3.title}
							</a>
						</h3>
						<p class="text-gray-600 mb-4">
							{home.featuredPosts.post_3.excerpt}
						</p>
						<p class="text-sm text-gray-500 mb-4">
							By {home.featuredPosts.post_3.author} on {
								home.featuredPosts.post_3.date
							}
						</p>
						<a
							href="/blog/post-3"
							class="text-blue-600 hover:underline">Read more</a
						>
					</div>
				</div>
			</div>
		</section>
		<section>
			<h2 class="text-3xl font-semibold mb-8 text-center">
				{home.categories.title}
			</h2>
			<div class="flex flex-wrap justify-center gap-4">
				<a
					href="/category/technology"
					class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-medium hover:bg-blue-200 transition duration-200"
				>
					{home.categories.category_1}
				</a>
				<a
					href="/category/health-wellness"
					class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-medium hover:bg-green-200 transition duration-200"
				>
					{home.categories.category_2}
				</a>
				<a
					href="/category/personal-development"
					class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full text-sm font-medium hover:bg-yellow-200 transition duration-200"
				>
					{home.categories.category_3}
				</a>
				<a
					href="/category/travel"
					class="bg-red-100 text-red-800 px-4 py-2 rounded-full text-sm font-medium hover:bg-red-200 transition duration-200"
				>
					{home.categories.category_4}
				</a>
				<a
					href="/category/finance"
					class="bg-purple-100 text-purple-800 px-4 py-2 rounded-full text-sm font-medium hover:bg-purple-200 transition duration-200"
				>
					{home.categories.category_5}
				</a>
				<a
					href="/category/lifestyle"
					class="bg-indigo-100 text-indigo-800 px-4 py-2 rounded-full text-sm font-medium hover:bg-indigo-200 transition duration-200"
				>
					{home.categories.category_6}
				</a>
			</div>
		</section>
	</Container>
</Layout>
